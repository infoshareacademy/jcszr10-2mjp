
@model VacationCalendar.BusinessLogic.Dtos.LoginDto
@{
}
@{
    if (TempData["Message"] != null)
    {
        <h5 class="text-center" style="color: red">@TempData["Message"]</h5>

    }
}
<div class="container border" style="padding:20px">
    <form asp-action="Login">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Email"></label>
            </div>
            <div class="col-5">
                <input type="email" asp-for="@Model.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="@Model.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="@Model.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox"  asp-for="@Model.RememberMe" class="form-check-input"/>
                <label class="form-check-label" asp-for="@Model.RememberMe"></label>
            </div>
        </div>
        <div class="form-group row">

            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>

        </div>
    </form>
</div>
